/* pages/my/my.wxss */
/* 用户信息 */

.userinfo {
  height: 200rpx;
  position: relative;
z-index: -1;
}

.scan-free {
  color: var(--ui-TC) !important;
}

.scan-free::after {
  border: solid var(--ui-TC) !important;
}

.kefubtn {
  position: absolute;
  top: 0;
  left: 0;
  min-height: 4em;
  width: 100%;
  opacity: 0;
}

/* 用户 */
.info_box {
  margin-top: -120rpx;
}

.info_scan{
  float: right;
}

.info_right   {
  float: right;
  min-width: 80rpx;
  text-align: center;
  display: block;
 
}
.info_right  .exit {
 margin-left: 10rpx;
 
}
.info_avatar {
  margin-top: -80rpx;
  height: 100rpx;
  width: 100rpx;
  overflow: hidden;
  position: relative;
  border-radius: 50%;

}

.info_avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #f7f7f7;
}

 
.info_user {
  display: block;
  margin: 24rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
 
}

.info_name {
 
  display: inline-block;
  height: 45rpx;
  line-height: 45rpx;
  margin-right: 20rpx;
  color: #333333;
  font-size: 18px;
}

.info_lv {
  
  margin-top: 8rpx;
 
  font-size: 12px;
  height: 12px;
  line-height: 12px;
  padding: 5rpx 8rpx;
  overflow: hidden; 
}

.info_uid {
  display: block;
  height: 22px;
  line-height: 22px;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

  color: #999999 !important;
 
   
  font-weight: 300;
}

.ui-item {
  display: block;
  padding: 24rpx 0 20rpx;
  text-align: center;
}
.ui-menu-item {
 
  padding: 0;
}.ui-title {
 
  padding-left: 10rpx;
}

.cicon-service-fill{
  color: #F37D7D;
}
.cicon-weixin{
font-size: 15px;
  color:#FFB300;
}
.cicon-service{
  color:#9DCA08;
}
.cicon-settings{
  color:#087cca;
}

.cicon-shopping-cart{
  color:#b0ca08;
}
.cicon-order{
  color:#45ca08;
}

.cicon-avatar{
  color:#ca0880;
}
.cicon-creative{
  color:#91B9EB;
}
.cicon-clothes{
  font-size: 13px;
  color:#FFB300;
}

/* 编辑弹窗 */
.pop-input{
  background-color: #f5f5f5;
  padding: 24rpx 12rpx;
  border-radius: 12rpx;
  width: auto;
}

.pop-edit {
  padding: 24rpx 24rpx 120rpx 24rpx;
}

.pop-header {
  text-align: center;
  padding-bottom: 24rpx;
}
.pop-footer {
  display: flex;
  justify-content: space-between;
  padding-top: 24rpx ;
}
.pop-footer .btn-cancel {
  color: #999;
}

.pop-header .title {
  font-weight: 500;
}

.pop-shop {
  padding: 40rpx 0 80rpx;
}

.pop-shop-form-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #EEE;
}

.pop-shop-form-label {
  width: 280rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #666;
}

.pop-shop-form-item input {
  flex: 1;
}

.pop-shop-form-item-switch {
  justify-content: space-between;
  align-items: center;
}

.pop-shop-form-item-switch button {
  font-size: 15px;
  color: #2f80ed;
  padding: 0;
  background: none;
}

.pop-shop-form-item-switch button::after {
  border: none;
}

.pop-shop-form-item-switch .address {
  font-size: 26rpx;
  flex: 1;
}

.pop-shop-form-item-switch .address-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #666;
}

.pop-shop-tip {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 2;
}

.pop-shop-tip .btn-copy {
  display: inline-block;
  height: 48rpx;
  padding: 0 30rpx;
  margin-left: 20rpx;
  border-radius: 36rpx;
  background: #EEE;
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  line-height: 48rpx;
}
