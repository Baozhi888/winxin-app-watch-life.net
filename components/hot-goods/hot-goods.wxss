/* listTyle 1 : 横向左滑列表（商品上图下文布局）*/
.hot-goods {
  padding-bottom: 24rpx;
}

.hot-goods.hot-goods-home {
  padding: 0;
}

/* 顶部标题栏 */
.hot-goods .header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  margin-top: 24rpx;
}

.hot-goods .title {
  font-size: 18px;
  color: #333;
  font-weight: 600;
}

.hot-goods .tip {
  font-size: 26rpx;
  font-weight: 400;
  color: #959595;
  margin-right: 6rpx;
}

/* 列表 */
.hot-goods .list {
  display: flex;
}

.hot-goods .item {
  display: flex;
  margin-right: 24rpx;
  background: #fff;
  border-radius: 4px;
  padding: 24rpx;
}

.hot-goods .item .img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 4px;
  margin-right: 16rpx;
  background: #f5f7f7;
}

.hot-goods .info .name {
  width: 230rpx;
  font-size: 15px;
  color: #333;
 margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.hot-goods .info .price {
  font-size: 12px;
  height: 30rpx;
  line-height: 30rpx;
  color: #777;
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.hot-goods .info .price .sale-price {
  font-size: 16px;
  font-weight: 500;
  color: #fe645a;
  width: 200rpx;
}

.hot-goods .info .price .unit {
  color: #fe645a; font-size: 16px;
  font-weight: 500;
}

.hot-goods .info .price .cost-price {
  text-decoration: line-through;
  margin-left: 4rpx;
}

