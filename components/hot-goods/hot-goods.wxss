/* 公用按钮样式 */
.footer .btn {
  color: #fe645a;
  font-size: 12px;
  font-weight: 500;
  display: inline-block;
  position: relative;
}

.footer .btn::before {
  content: '';
  border-top: 6rpx solid transparent;
  border-bottom: 6rpx solid transparent;
  border-left: 8rpx solid #fe645a;
  position: absolute;
  top: 50%;
  right: -14rpx;
  transform: translateY(-50%);
}

.footer .btn::after {
  content: '';
  border-top: 6rpx solid transparent;
  border-bottom: 6rpx solid transparent;
  border-left: 8rpx solid #fe645a;
  position: absolute;
  top: 50%;
  right: -24rpx;
  transform: translateY(-50%);
}