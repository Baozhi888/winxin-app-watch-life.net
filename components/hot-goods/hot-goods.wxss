/* 顶部标题栏 */
.hot-goods .header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}

.hot-goods .title {
  font-size: 14px;
  color: #333;
  font-weight: 600;
}

.hot-goods .tip {
  font-size: 26rpx;
  font-weight: 400;
  color: #959595;
  margin-right: 6rpx;
}

/* 列表 */
.hot-goods .list {
  display: flex;
}

.hot-goods .item {
  display: flex;
  margin-right: 24rpx;
  background: #fff;
  border-radius: 4px;
  padding: 0;
}